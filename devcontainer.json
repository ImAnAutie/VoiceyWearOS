{
    "name": "Nativescript android dev container",
    "image": "scratchy/nativescript-cli:20.04-12.x-7.0.11-29.0.3"
    # Instead of "image", use "dockerFile": "<path to Dockerfile>",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "remoteUser": "tnsuser",
    "mounts": [
        "source=${localWorkspaceFolder}/Cache/.gradle,target=/home/tnsuser/.gradle,type=bind"
    ],
    "runArgs": [
        "--privileged",
        "-v",
        "/dev/bus/usb:/dev/bus/usb"
    ]
}
